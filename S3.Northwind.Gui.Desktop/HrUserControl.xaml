<UserControl x:Class="S3.Northwind.Gui.Desktop.HrUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:S3.Northwind.Gui.Desktop"
             mc:Ignorable="d"
             d:DesignHeight="1000"
             d:DesignWidth="800">
    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="50" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Column="0"
                      x:Name="employeeDataGrid"
                      AutoGenerateColumns="False"
                      SelectionChanged="EmployeeDataGrid_SelectionChanged"
                      Background="LightBlue"
                      AlternatingRowBackground="LightBlue"
                      ItemsSource="{Binding Path=Employees, UpdateSourceTrigger=Explicit}">
                
                <!--#region DatagridTextColumn setup for Employees-->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fornavn"
                                        Binding="{Binding Path=FirstName}" />
                    <DataGridTextColumn Header="Efternavn"
                                        Binding="{Binding Path=LastName}" />
                    <DataGridTextColumn Header="Job"
                                        Binding="{Binding Path=Title}" />
                    <DataGridTextColumn Header="Title"
                                        Binding="{Binding Path=TitleOfCourtesy}" />
                    <DataGridTextColumn Header="Fødsels dato"
                                        Binding="{Binding Path=BirthDate, StringFormat='dd/MM/yyyy'}" />
                    <DataGridTextColumn Header="Ansættelses dato"
                                        Binding="{Binding Path=HireDate, StringFormat='dd/MM/yyyy'}" />
                    <DataGridTextColumn Header="Adresse"
                                        Binding="{Binding Path=Address}" />
                    <DataGridTextColumn Header="By"
                                        Binding="{Binding Path=City}" />
                    <DataGridTextColumn Header="Postnummer"
                                        Binding="{Binding Path=PostalCode}" />
                    <DataGridTextColumn Header="Region"
                                        Binding="{Binding Path=Region}" />
                    <DataGridTextColumn Header="Land"
                                        Binding="{Binding Path=Country}" />
                    <DataGridTextColumn Header="Hjemme nummer"
                                        Binding="{Binding Path=HomePhone}" />
                    <DataGridTextColumn Header="Extension"
                                        Binding="{Binding Path=Extension}" />
                    <DataGridTextColumn Header="Noter"
                                        Binding="{Binding Path=Notes}" />
                </DataGrid.Columns>
                <!--#endregion-->

            </DataGrid>
            <Grid Grid.Row="2">
                
                <!--#region Grid setup for search fields-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <!--#endregion-->

                <!--#region search fields-->
                <Label Grid.Column="0"
                       Grid.Row="0"
                       x:Name="labelSearch"
                       Content="Søge kriterier"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <Label Grid.Column="0"
                       Grid.Row="1"
                       x:Name="labelName"
                       Content="Navn"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <Label Grid.Column="0"
                       Grid.Row="2"
                       x:Name="labelInitials"
                       Content="Initials"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <Label Grid.Column="0"
                       Grid.Row="3"
                       x:Name="labelCountrySearch"
                       Content="Country"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <Label Grid.Column="0"
                       Grid.Row="4"
                       x:Name="labelRegionSearch"
                       Content="Region"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <TextBox Grid.Column="1"
                         Grid.Row="1"
                         x:Name="textBoxName"
                         HorizontalAlignment="Left"
                         Height="23"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         Width="220"
                         TextChanged="textBoxName_TextChanged" />
                
                <TextBox Grid.Column="1"
                         Grid.Row="2"
                         x:Name="textBoxInitials"
                         HorizontalAlignment="Left"
                         Height="23"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         Width="220"
                         MaxLength="4"
                         TextChanged="textBoxInitials_TextChanged" />

                <ComboBox Grid.Column="1"
                          Grid.Row="3"
                          x:Name="comboBoxCountry"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Width="220"
                          Height="23"
                          SelectionChanged="ComboBoxCountry_SelectionChanged"
                          ItemsSource="{Binding Path=Countries}"
                          >
                </ComboBox>
                <ComboBox Grid.Column="1"
                          Grid.Row="4"
                          x:Name="comboBoxRegion"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Width="220"
                          Height="23"
                          SelectionChanged="ComboBoxRegion_SelectionChanged"
                          >
                </ComboBox>

                <Button Grid.Column="1"
                        Grid.Row="5"
                        x:Name="buttonResetSearch"
                        Content="Reset"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="75"
                        Click="ButtonResetSearch_Click" />
                <!--#endregion-->

            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            
            <!--#region grid setup for SelectedEmployee-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />

                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />

                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />

                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />

                <RowDefinition Height="50" />
                <RowDefinition Height="150" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />

            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Labels for SelectedEmployee-->
            <Label Grid.Column="0"
                   Grid.Row="0"
                   x:Name="labelFirstName"
                   Content="Fornavn"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="1"
                   x:Name="labelLastName"
                   Content="Efternavn"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="2"
                   x:Name="labelJob"
                   Content="Job"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="3"
                   x:Name="labelTitle"
                   Content="Title"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="4"
                   x:Name="labelBirthday"
                   Content="Fødelse dato"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="5"
                   x:Name="labelHireDate"
                   Content="Ansættelse dato"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="6"
                   x:Name="labelAddress"
                   Content="Adresse"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="7"
                   x:Name="labelCity"
                   Content="By"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="8"
                   x:Name="labelPostalCode"
                   Content="Postnummer"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="9"
                   x:Name="labelRegion"
                   Content="Region"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="10"
                   x:Name="labelCountry"
                   Content="Land"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="11"
                   x:Name="labelHomePhone"
                   Content="Hjemme nummer"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="12"
                   x:Name="labelExtension"
                   Content="Extension"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="13"
                   x:Name="labelNotes"
                   Content="Noter"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Label Grid.Column="0"
                   Grid.Row="14"
                   x:Name="labelReportTo"
                   Content="Chef"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <!--#endregion-->

            <!--#region TextBox/Datapicker for SelectedEmployee-->
            <TextBox Grid.Column="1"
                     Grid.Row="0"
                     x:Name="textBoxFirstName"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.FirstName}" />

            <TextBox Grid.Column="1"
                     Grid.Row="1"
                     x:Name="textBoxLastName"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.LastName}" />

            <TextBox Grid.Column="1"
                     Grid.Row="2"
                     x:Name="textBoxJob"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.Title}" />
            
            <TextBox Grid.Column="1"
                     Grid.Row="3"
                     x:Name="textBoxTitle"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.TitleOfCourtesy}" />
            
            <DatePicker Grid.Column="1"
                        Grid.Row="4"
                        x:Name="datePickerBirthday"
                        HorizontalAlignment="Left"
                        Height="23"
                        VerticalAlignment="Top"
                        Width="220"
                        Text="{Binding Path=SelectedEmployee.BirthDate, StringFormat='dd/MM/yyyy'}"
                        />
            
            <DatePicker Grid.Column="1"
                        Grid.Row="5"
                        x:Name="datePickerHireDate"
                        HorizontalAlignment="Left"
                        Height="23"
                        VerticalAlignment="Top"
                        Width="220"
                        Text="{Binding Path=SelectedEmployee.HireDate, StringFormat='dd/MM/yyyy'}"
                        />
            
            <TextBox Grid.Column="1"
                     Grid.Row="6"
                     x:Name="textBoxAddress"
                     HorizontalAlignment="Left"
                     Height="40"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.Address}"
                     />
            
            <TextBox Grid.Column="1"
                     Grid.Row="7"
                     x:Name="textBoxCity"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.City}"
                     />
            
            <TextBox Grid.Column="1"
                     Grid.Row="8"
                     x:Name="textBoxPostalCode"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.PostalCode}"
                     />
            
            <TextBox Grid.Column="1"
                     Grid.Row="9"
                     x:Name="textBoxRegion"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     Text="{Binding Path=SelectedEmployee.Region}"
                     />
            
            <TextBox Grid.Column="1"
                     Grid.Row="10"
                     x:Name="textBoxCountry"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220" 
                     Text="{Binding Path=SelectedEmployee.Country}"
                     />
            
            <TextBox Grid.Column="1"
                     Grid.Row="11"
                     x:Name="textBoxHomePhone"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220" 
                     Text="{Binding Path=SelectedEmployee.HomePhone}" />
            <!--the textbox below is using the NumberValidationTextBox method to only allow numbers-->
            <TextBox Grid.Column="1"
                     Grid.Row="12"
                     x:Name="textBoxExtension"
                     HorizontalAlignment="Left"
                     Height="23"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220"
                     MaxLength="4"
                     PreviewTextInput="NumberValidationTextBox"
                     Text="{Binding Path=SelectedEmployee.Extension}"
                     />
            
            <TextBox Grid.Column="1"
                     Grid.Row="13"
                     x:Name="textBoxNotes"
                     HorizontalAlignment="Left"
                     Height="120"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="220" 
                     Text="{Binding Path=SelectedEmployee.Notes}"
                     />
            
            <ComboBox Grid.Column="1" 
                      Grid.Row="14"
                      x:Name="comboBoxAllBosses"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Width="220"
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FirstName}"
                                       Margin="0,0,5,0" />
                            <TextBlock Text="{Binding LastName}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Grid Grid.Column="1"
                  Grid.Row="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            

            <Button Grid.Column="0"
                    x:Name="buttonUpdate"
                    Content="Updater"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="75"
                    Click="ButtonUpdate_Click" />

            <Button Grid.Column="1"
                    x:Name="buttonAdd"
                    Content="Tilføj"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="75"
                        Click="ButtonAdd_Click" />
            </Grid>
            <!--#endregion-->
            
            
        </Grid>
    </Grid>
</UserControl>
